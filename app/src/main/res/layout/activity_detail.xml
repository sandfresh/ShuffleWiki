<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="gikolab.com.shufflewiki.activity.DetailActivity">

    <include
        android:id="@+id/toolbar2"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_below="@id/toolbar2"
        android:id="@+id/imageScroll"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:gravity="top"
        >
        <LinearLayout
            android:id="@+id/imageScrollLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical" >
            </LinearLayout>>

        </ScrollView>
    <TextView
        android:layout_below="@id/imageScroll"
        android:id="@+id/detailTitle"
        android:text="Title:..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>
    <TextView
        android:layout_below="@id/detailTitle"
        android:id="@+id/detailText"
        android:text="Category:..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/bookmark"
        android:layout_below="@id/detailText"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="@string/bookmark_label"/>
    <Button
        android:id="@+id/remove"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/bookmark"
        android:layout_toRightOf="@+id/bookmark"
        android:text="@string/del_label"/>

</RelativeLayout>
